<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="crm_case_form_view_leads" model="ir.ui.view">
        <field name="name">crm.lead.form.eniro</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_form_view_leads" />
        <field name="arch" type="xml">
            <field name="name" position="after">
                <button help="Get Company Info" name="get_company_info" colspan="2" icon="fa-copy" type="object" />
            </field>
            <field name="website" position="after">
                <label for="company_registry" />
                <div>
                    <field name="company_registry" class="oe_inline" />
                    <button type="object" icon="fa-copy" name="get_company_info_registry" help="Get Company Info using Company Registry" class="oe_inline" />
                </div>
            </field>
        </field>
    </record>
</odoo>
