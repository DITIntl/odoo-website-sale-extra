<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="cavarosa_product_snippets" inherit_id="website.snippets" name="Cavarosa Custom Snippets">
            <xpath expr="//div[@id='snippet_structure']" position="inside">
                <div>
                    <div class="oe_snippet_thumbnail">
                        <img class="oe_snippet_thumbnail_img" src="/website/static/src/img/blocks/block_features.png" />
                        <span class="oe_snippet_thumbnail_title">Products By Category</span>
                    </div>
                    <section class="oe_snippet_body cavarosa_products_by_category_snippet mb16 mt16">
                        <div class="container cavarosa_products_by_category col-md-12">
                            <h3 class="text-center mt16 mb16">Category</h3>
                            <div class="cavarosa_products_by_category_content"/>
                        </div>
                    </section>
                </div>
                <div>
                    <div class="oe_snippet_thumbnail">
                        <img class="oe_snippet_thumbnail_img" src="/website/static/src/img/blocks/block_features.png" />
                        <span class="oe_snippet_thumbnail_title">Products By Supplier</span>
                    </div>
                    <section class="oe_snippet_body cavarosa_products_by_supplier_snippet mb16 mt16">
                        <div class="container cavarosa_products_by_supplier col-md-12">
                            <h3 class="text-center mt16 mb16 cavarosa_products_by_supplier_title">Supplier</h3>
                            <div class="cavarosa_products_by_supplier_content"/>
                        </div>
                    </section>
                </div>
            </xpath>
