        </template>
        <template id="product_snippet_options" inherit_id="website.snippet_options" name="Product Snippet Options">
            <xpath expr="." position="inside">
                <div data-snippet-option-id="cavarosa-products-by-supplier-snippet" data-selector=".cavarosa_products_by_supplier_snippet">
                    <li class="dropdown-submenu">
                        <a tabindex="-1" href="#">Product by Supplier</a>
                        <t t-set="suppliers" t-value="request.env['res.partner'].search([('supplier', '=', True), ('customer', '=', False), ('is_company', '=', True)])" />
                        <ul class="dropdown-menu">
                            <t t-if="len(suppliers) &gt; 0">
                                <t t-foreach="suppliers" t-as="supplier">
                                    <li>
                                        <a t-att-onclick="'get_products(&quot;%s&quot;)' %supplier.id"><t t-esc="supplier.name"/></a>
                                    </li>
                                </t>
                            </t>
                        </ul>
                    </li>
                    <li class="dropdown-submenu">
                        <a tabindex="-1" href="#">Columns</a>
                        <ul class="dropdown-menu">
                            <li><a value="3" onclick="crp_col_change(3)">Col-3</a></li>
                            <li><a value="4" onclick="crp_col_change(4)">Col-4</a></li>
                            <li><a value="6" onclick="crp_col_change(6)">Col-6</a></li>
                            <li><a value="12" onclick="crp_col_change(12)">Col-12</a></li>
                        </ul>
                    </li>
                </div>
                <div data-snippet-option-id="individual-product-snippet" data-selector=".individual_product">
                    <li class="dropdown-submenu">
                        <a tabindex="-1" href="#">Product</a>
                        <t t-set="products" t-value="request.env['product.template'].search([('active', '=', True)])" />
                        <ul class="dropdown-menu">
                            <t t-if="len(products) &gt; 0">
                                <t t-foreach="products" t-as="product">
                                    <li>
                                        <a t-att-data-value="product.id" t-att-onclick="'product_change(&quot;%s&quot;)' %product.id"><t t-esc="product.name"/></a>
                                    </li>
                                </t>
                            </t>
                        </ul>
                    </li>
                    <li class="dropdown-submenu">
                        <a tabindex="-1" href="#">Columns</a>
                        <ul class="dropdown-menu">
                            <li><a value="3" onclick="ind_col_change(3)">Col-3</a></li>
                            <li><a value="4" onclick="ind_col_change(4)">Col-4</a></li>
                            <li><a value="6" onclick="ind_col_change(6)">Col-6</a></li>
                            <li><a value="12" onclick="ind_col_change(12)">Col-12</a></li>
                        </ul>
                    </li>
                </div>
            </xpath>
        </template>
        <!-- Custom Snippet CSS and javascript -->
        <template id="cavarosa_product_snippet_css_and_js" inherit_id="website.layout" name="Cavarosa Product Snippet Custom CSS and JS">
            <xpath expr="//t[@t-call-assets='website.assets_frontend']" position="before">
                <link href="/website_sale_cavarosa/static/src/css/product_snippets.css" rel="stylesheet"/>
            </xpath>
            <xpath expr="//body" position="inside">
                <script src="/website_sale_cavarosa/static/src/js/product_snippets.js" type="text/javascript"/>
            </xpath>
        </template>
        <template id="website_sale_cavarosa_options_css" inherit_id="website.theme" name="Website Sale Cavarosa Options CSS">
            <xpath expr="link[last()]" position="after" />
        </template>

    </data>
</openerp>
