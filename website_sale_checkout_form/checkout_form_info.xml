        <template id="checkout_form_info" inherit_id="website_event_sale.event_description_full" name="Check Out Form">
            <xpath expr="//table[@itemprop='offers']/thead/tr/th[3]" position="after">
                <th style="min-width: 100px">Christelle</th>
                <th style="min-width: 100px">Price</th>
            </xpath>

            <xpath expr="//tr[@itemscope='itemscope']/td[3]">
                <td>
                    <input type="date" name="birth" placeholder="YYYY-MM-DD" required="True" class="form-control"/>
                </td>
                <td>
                    <input type="text" placeholder="För omyndiga" name="parent" required="True" class="form-control"/>
                </td>
                <t t-foreach="event" t-as="e">
                    <t t-esc="e.name"/>
                </t>
            </xpath>
            
