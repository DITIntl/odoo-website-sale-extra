<openerp>
<data>

    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">res.partner.invoice.type.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="account.view_partner_property_form"/>
        <field name="arch" type="xml">
            <field name="property_payment_term" position="after">
                <field name="invoice_type_id"/>
            </field>
        </field>
    </record>

    <record id="view_sale_journal_invoice_type_form" model="ir.ui.view">
        <field name="name">sale_journal.invoice.type.mail.form</field>
        <field name="model">sale_journal.invoice.type</field>
        <field name="inherit_id" ref="sale_journal.view_sale_journal_invoice_type_form"/>
        <field name="arch" type="xml">
            <field name="invoicing_method" position="after">
                <field name="send_email"/>
            </field>
        </field>
    </record>
    
    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">sale.order.invoice.type.mail.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <button name="action_quotation_send" states="draft" position="replace">
                <field name="sjm_send_email" invisible="1"/>
                <span states="draft">
                    <button name="action_quotation_send" attrs="{'invisible': [('sjm_send_email', '!=', True)]}" string="Send by Email" type="object" class="oe_highlight" groups="base.group_user"/>
                    <button name="action_quotation_send" attrs="{'invisible': [('sjm_send_email', '=', True)]}" string="Send by Email" type="object" groups="base.group_user"/>
                </span>
            </button>
        </field>
    </record>

</data>
</openerp>
